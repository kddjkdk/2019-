<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#131212">

    <ImageButton
        android:id="@+id/home"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:onClick="hom"
        android:padding="0sp"
        android:scaleType="centerCrop"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/login_com"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="22dp"
        android:layout_toEndOf="@+id/home"
        android:layout_toRightOf="@id/home"
        android:background="#473E3E"
        android:onClick="lo_co"
        android:text="로그인/회원가입"
        android:textColor="#FFFFFF"
        android:textSize="25px"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <Button
        android:id="@+id/login_com3"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignStart="@+id/login_com"
        android:layout_alignLeft="@id/login_com"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-2dp"
        android:layout_marginLeft="-2dp"
        android:layout_marginBottom="636dp"
        android:background="#FFFFFF"
        android:textColor="#FFFFFF"
        android:textSize="25px"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.857"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <Button
        android:id="@+id/login_com2"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/login_com3"
        android:layout_alignEnd="@+id/login_com"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="-8dp"
        android:layout_marginBottom="635dp"
        android:layout_toEndOf="@+id/login_com3"
        android:background="#473E3E"
        android:text="검색"
        android:textColor="#FFFFFF"
        android:textSize="25px"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.958"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/home"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="@+id/home"
        tools:layout_editor_absoluteX="0dp">

        <Button
            android:id="@+id/Streaming"
            android:layout_width="102.75dp"
            android:layout_height="55dp"
            android:layout_alignStart="@+id/null"
            android:background="#473E3E"
            android:onClick="stream"
            android:text="스트리밍"
            android:textColor="#FFFFFF"
            android:textSize="35px"

            android:textStyle="bold" />

        <Button
            android:id="@+id/Mypage"
            android:layout_width="102.75dp"
            android:layout_height="55dp"
            android:background="#473E3E"
            android:backgroundTintMode="add"
            android:onClick="myp"

            android:text="마이페이지"
            android:textColor="#FFFFFF"
            android:textSize="35px"

            android:textStyle="bold" />

        <Button
            android:id="@+id/persrec"
            android:layout_width="102.75dp"
            android:layout_height="55dp"
            android:background="#473E3E"
            android:onClick="Pers"
            android:text="구매/추천"
            android:textColor="#FFFFFF"
            android:textSize="35px"
            android:textStyle="bold" />

        <Button
            android:id="@+id/comu"
            android:layout_width="102.75dp"
            android:layout_height="match_parent"
            android:background="#473E3E"
            android:onClick="comu"
            android:text="커뮤니티"
            android:textColor="#FFFFFF"
            android:textSize="35px"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>
